
<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :cateimg %>
    <%= f.input :slug %>
    <%= f.input :name %>
    <%= f.input :sub_title %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
