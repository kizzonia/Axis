<div class="log_reg_form mt70-992">
  <h2 class="title">Log In</h2>
  <div class="sign_up_form">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">

    <%= f.input :email,
                required: false,
                autofocus: true,
                class: "form-control",
                input_html: { autocomplete: "email" } %>

    </div>

    <div class="form-group">

      <%= f.input :password,
                  required: false,
                  class: "form-control",
                  input_html: { autocomplete: "current-password" } %>
    </div>
    <div class="form-group">    <%= f.input :remember_me, class: "form-control", as: :boolean if devise_mapping.rememberable? %>
</div>

  <div class="form-group">
    <%= f.button :submit, "Log in", class: "btn btn-signup btn-thm"  %>
  </div>
<% end %>


<div class="hr_content">
  <hr>
  <span class="hr_top_text">or</span>
</div>
<%= render "devise/shared/links" %>
</div>
</div>
