<!-- Our FAQ -->
<section class="our-faq pb10">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 offset-lg-3">
        <div class="main-title text-center">
          <h2>Frequently Asked Questions</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        <div class="shortcode_widget_accprdons">
          <div class="faq_according text-start">
            <div class="accordion" id="accordionExample">
            <% @faqs.each do |a| %>
              <div class="card">
                <div class="card-header " id="headingOne">
                  <h2 class="mb-0">
                    <button class="btn btn-link text-start" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne<%=a.title%>" aria-expanded="true" aria-controls="collapseOne"><span><%=a.id%></span> <%= a.title %>?</button>
                  </h2>
                </div>
                <div id="collapseOne<%=a.title%>" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                  <div class="card-body"><%= a.body %>.
                  </div>
                </div>
              </div>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>
